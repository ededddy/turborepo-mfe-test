{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "./",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@web/*": [
                "./app/*"
            ],
            "@web/public/*": [
                "./public/*"
            ],
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "next-env.d.ts",
        "next.config.js",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}
